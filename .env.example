# Postgres (used by docker-compose.dev.yml and Django). Port 5433 avoids conflict with local Postgres on 5432.
POSTGRES_DB=task_manager_db
POSTGRES_USER=task_manager_user
POSTGRES_PASSWORD=task_manager_password
POSTGRES_PORT=5433

# Optional: set DATABASE_URL instead of POSTGRES_* (e.g. for different host/port)
# DATABASE_URL=postgres://task_manager_user:task_manager_password@localhost:5432/task_manager_db

# Django
DEBUG=True
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# CORS (production): comma-separated origins, e.g. https://app.example.com
# CORS_ALLOWED_ORIGINS=
