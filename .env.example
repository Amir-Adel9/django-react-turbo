# Postgres (app and docker-compose use these defaults if unset)
POSTGRES_DB=task_manager_db
POSTGRES_USER=task_manager_user
POSTGRES_PASSWORD=task_manager_password
POSTGRES_HOST=localhost
POSTGRES_PORT=5433

# Django (app uses these defaults if .env is missing)
DEBUG=True
SECRET_KEY=django-insecure-dev-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Default admin (optional): run `python manage.py seed_admin` after migrate.
# Default admin: admin@example.com / admin123! (set ADMIN_SEED_PASSWORD in production)
ADMIN_SEED_PASSWORD=admin123!
